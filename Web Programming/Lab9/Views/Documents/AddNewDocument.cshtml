
@{
    ViewBag.Title = "AddNewDocument";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Document</title>
    <style>
        input {
            width: 190px;
            font-size: 16px;
            height: 28px;
            padding: 2px;
            margin: 3px;
            border: solid;
            border-color: indigo;
            border-radius: 4px;
            border-width: 2px;
            margin-left: 72px;
        }

        form {
            padding: 2px;
        }

        button {
            width: 160px;
            height: 45px;
            color: white;
            background-color: forestgreen;
            border-radius: 6px;
            margin: 2px;
        }
    </style>
</head>
<body>
    <div>
        <form action="/Documents/SaveAddedDocument" method="GET">
            Author : <input type="text" id="IDauthor" name="author" /> <br />
            Title : <input type="text" id="IDtitle" name="title" /> <br />
            Number of pages : <input type="text" id="IDnumberOfPages" name="number_of_pages" /> <br />
            Type : <input type="text" id="IDtype" name="type" /> <br />
            Format : <input type="text" id="format" name="format" /> <br />

            <div>
                <button type="submit">Add Document</button>
                <button type="reset" onclick="window.location.href='Documents'">Cancel</button>
            </div>
        </form>
        
    </div>
</body>
</html>

