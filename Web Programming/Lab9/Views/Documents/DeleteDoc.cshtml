
@model int

@{
    ViewBag.Title = "DeleteDoc";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <title>Delete Document</title>

    <style>
        .container {
            display: flex;
            flex-direction: column;
            height: 400px;
            justify-content: space-evenly;
            align-items: center;
        }

        input {
            background-color: forestgreen;
            color: white;
            border-radius: 5px;
            height: 40px;
            width: 120px;
        }

        button {
            background-color: forestgreen;
            color: white;
            border-radius: 5px;
            height: 40px;
            width: 120px;
            margin-left: 5px;
        }
    </style>

</head>
<body>
    <div class="container">

        <h3>Confirm Document Deletion</h3>

        <p>Are you sure you want to delete the document with id: @Model</p>

        <form action="@Url.Action("DeleteDocument", "Documents")" method="post">
            @Html.Hidden("id", Model)
            <input type="submit" value="Confirm" />
            <button type="reset" onclick="window.location.href='../Documents'">Cancel</button>
        </form>
    </div>
</body>
</html>

