@model Lab9.Models.Document

@{
    ViewBag.Title = "Update Document";
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width">
        <title>Update Document</title>
        <style>
            input {
                width: 190px;
                font-size: 16px;
                height: 28px;
                padding: 2px;
                margin: 3px;
                border: solid;
                border-color: indigo;
                border-radius: 4px;
                border-width: 2px;
                margin-left: 72px;
            }

            form {
                padding: 2px;
            }

            button {
                width: 140px;
                height: 38px;
                color: white;
                background-color: forestgreen;
                border-radius: 6px;
                margin: 5px;
            }

            .buttons {
                margin-top: 25px;
            }
        </style>
    </head>
    <body>
        <h3>Update Document</h3>

        <form action="@Url.Action("UpdateDocument", "Documents", new { id = Model.Id })" method="post">
            @Html.Hidden("id", Model.Id)
            <div>
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" value="@Model.Author" />
            </div>
            <div>
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="@Model.Title" />
            </div>
            <div>
                <label for="number_of_pages">Number of Pages:</label>
                <input type="number" id="number_of_pages" name="number_of_pages" value="@Model.NumberOfPages" />
            </div>
            <div>
                <label for="type">Type:</label>
                <input type="text" id="type" name="type" value="@Model.Type" />
            </div>
            <div>
                <label for="format">Format:</label>
                <input type="text" id="format" name="format" value="@Model.Format" />
            </div>
            <div class="buttons">
                <button type="submit" value="Update">Update</button>
                <button type="button" onclick="window.location.href='../Documents'">Cancel</button>
            </div>
        </form>
    </body>
</html>



